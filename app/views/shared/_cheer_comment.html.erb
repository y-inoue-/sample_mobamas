<br><br>
<b>応援コメント</b><br>

<% if cheer_comment[:comment_array].blank? then %>
  直近のコメントはありません<br>
<% else %>
  <% cheer_comment[:comment_array].each do |comment| %>
    <%= link_to comment[:user_name], controller: "user_page", action: "index", user_id: comment[:user_id] %><br>
    &nbsp;&nbsp;<%= comment[:comment] %><br>
    &nbsp;&nbsp;&nbsp;&nbsp;<%= comment[:date] %><br>
    
    <% if cheer_comment[:is_myself] then %>
      <%= button_to "応援する", cheer_post_cheer_path(target_id: comment[:user_id]) %>
    <% end %>

    <% if comment[:can_delete] then %>
      <%= button_to "削除する", cheer_comment_view_delete_exec_path(comment_id: comment[:comment_id]), confirm: "削除しますか？" %>
    <% end %>
    <br>
  <% end %>
<% end %>
<br>
